<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    
    <style name="activity_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/lightblue</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="today_card_view_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    
    <style name="phase_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/lightblue</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="today_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/lightblue</item>
    </style>

    <style name="mg_display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_shape</item>
        <item name="android:elevation">2dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>